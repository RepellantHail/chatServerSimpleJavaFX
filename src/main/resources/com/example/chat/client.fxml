<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chat.Controller">
    <TextArea fx:id="messageArea" editable="false" prefHeight="250.0" prefWidth="400.0" wrapText="true" VBox.vgrow="ALWAYS" />
    <TextField fx:id="messageField" prefWidth="300.0" />
    <Button fx:id="sendButton" mnemonicParsing="false" text="Send" onAction="#handleSendButton" />
</VBox>
